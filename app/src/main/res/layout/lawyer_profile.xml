                <!--android:maxLines="1"-->
                <!--android:text="@string/consultation_request"-->
                <!--android:textColor="@color/colorAccent"-->
                <!--android:textSize="@dimen/_10sdp"-->
                <!--android:textStyle="bold" />-->
                <!--</LinearLayout>-->
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>