<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_b"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <TextView
        style="@style/MyLargeTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lawyer_book_meet" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progress"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <EditText
                    android:id="@+id/date"
                    style="@style/EditTextStyle"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down"
                    android:drawableTint="@color/colorAccent"
                    android:hint="@string/select_date" />

                <EditText
                    android:id="@+id/time"
                    style="@style/EditTextStyle"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_down"
                    android:drawableTint="@color/colorAccent"
                    android:hint="@string/select_time" />
                <EditText
                    android:id="@+id/description"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center_horizontal"
                    android:hint="@string/description"
                    android:inputType="text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/updateLayout"
                    android:visibility="gone">
                    <TextView
                        style="@style/ButtonTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:backgroundTint="@color/blue"
                        android:text="@string/save"
                        android:id="@+id/update"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />
                    <TextView
                        style="@style/ButtonTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:backgroundTint="@color/blue"
                        android:text="@string/cancele"
                        android:id="@+id/cancele"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />

                </LinearLayout>
                <TextView
                    style="@style/ButtonTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:backgroundTint="@color/blue"
                    android:text="@string/send"
                    android:id="@+id/send"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>